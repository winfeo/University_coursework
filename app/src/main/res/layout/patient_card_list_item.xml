<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="20dp">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        app:cardCornerRadius="8dp"
        app:cardElevation="4dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp">

            <!-- Каритинка пациента -->
            <ImageView
                android:id="@+id/picture_card_list_item"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:src="@mipmap/ic_launcher"

                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>

            <!-- ФИО -->
            <TextView
                android:id="@+id/nameTextView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:maxLines="2"
                android:text="Иванов Иван Иванович"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:textStyle="bold"

                app:layout_constraintStart_toEndOf="@+id/picture_card_list_item"
                app:layout_constraintTop_toTopOf="parent" />

            <!-- Возраст и пол -->
            <TextView
                android:id="@+id/ageGenderTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:layout_marginStart="24dp"
                android:textSize="12sp"
                android:text="Возраст: 32    Пол: мужской"
                android:textColor="@android:color/darker_gray"

                app:layout_constraintStart_toEndOf="@+id/picture_card_list_item"
                app:layout_constraintTop_toBottomOf="@id/nameTextView" />

            <!-- Диагноз -->
            <TextView
                android:id="@+id/diagnosisTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:layout_marginStart="24dp"
                android:textSize="12sp"
                android:text="Диагноз: расстройство личности"
                android:textColor="@android:color/darker_gray"

                app:layout_constraintStart_toEndOf="@+id/picture_card_list_item"
                app:layout_constraintTop_toBottomOf="@id/ageGenderTextView" />

            <!-- Полис ОМС -->
            <FrameLayout
                android:id="@+id/frameLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_marginTop="30dp"
                android:background="@drawable/rectangle_card2"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/picture_card_list_item">

                <TextView
                    android:id="@+id/insuranceTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="8dp"
                    android:text="@string/oms"
                    android:textColor="@color/buttonColor" />
            </FrameLayout>

            <!-- Полис ОМС код-->
            <TextView
                android:id="@+id/policyNumberTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1111 1111 1111 1111"
                android:layout_marginTop="30dp"
                android:layout_marginStart="30dp"

                app:layout_constraintStart_toEndOf="@+id/frameLayout"
                app:layout_constraintTop_toBottomOf="@+id/picture_card_list_item" />

            <!-- Кнопка -->
            <Button
                android:id="@+id/detailsButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/look_card"
                android:background="@drawable/rectangle_card3"

                android:textColor="@color/white"
                android:layout_marginTop="20dp"
                android:paddingHorizontal="10dp"
                android:paddingVertical="5dp"
                android:minWidth="0dp"
                android:minHeight="0dp"
                android:includeFontPadding="false"

                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/frameLayout" />

            <!-- ID -->
            <FrameLayout
                android:id="@+id/frameLayoutID"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"

                android:background="@drawable/rectangle_card4"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/policyNumberTextView">

                <TextView
                    android:id="@+id/idTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:text="ID: 12A-234"
                    app:layout_constraintBottom_toBottomOf="@id/detailsButton"
                    app:layout_constraintEnd_toEndOf="parent" />

            </FrameLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>



</androidx.constraintlayout.widget.ConstraintLayout>